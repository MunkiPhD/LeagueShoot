<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @match.title %>
</p>

<p>
  <b>Match date:</b>
  <%= @match.match_date %>
</p>

<h3>Stages</h3>
<% if @stages.count > 0 %>
  <ol>
    <% @stages.each do |stage| %>
      <li><%= link_to stage.name, stage %>
    <% end %>
  </ol>
<% else %>
  No Stages
<% end %>

<%= link_to "Add another stage", new_stage_path(:mid => @match.id) %><br/>


<%= link_to 'Edit', edit_match_path(@match) %> |
<%= link_to 'Back', matches_path %>
